<ul class="list-group">
<%= form_for ([@todo_list, @todo_item]) do |f| %>
  <li class="list-group-item" id="todo-list">
    <div class="page-title">
      Edit Todo Item
    </div>
    <div class="edit-todo-item-list-title">
        Todo Item in <%= @todo_list.title %>
    </div>
    <div class="edit-todo-item-content">
      <div class="edit-todo-item-title">
      Content:
      </div>
      <div>
      <%= f.text_field :content, id: "edit-todo-item-content" %>
      </div>
    </div>
  </li>
  <li class="list-group-item" id="create-todo-list">
    <%= f.submit "Update", id: "bottom-btn" %>
  </li>
<% end %>
</ul>
<div id="edit-todo-bottom-nav">
  <%= link_to 'Back', todo_list_path(@todo_list) %>
  |
  <%= link_to 'Home', root_path %>
</div>